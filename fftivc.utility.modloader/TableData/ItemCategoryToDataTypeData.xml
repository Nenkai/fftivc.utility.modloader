      <DataTypeId>6</DataTypeId>
    </ItemCategoryToDataType>
    <ItemCategoryToDataType>
      <Id>10</Id>
      <DataTypeId>7</DataTypeId>
    </ItemCategoryToDataType>
    <ItemCategoryToDataType>
      <Id>11</Id>
      <DataTypeId>7</DataTypeId>
